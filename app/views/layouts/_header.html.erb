<!DOCTYPE html>
<header id="myNavbar" class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <div class="name">
                    <% if user_signed_in? %>
                        <%= current_user.email %>
                    <% end %>
                </div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="/assets/logo.png" class="visible-xs-block" id="pandalogosmall">
        </div>
                
       
        <div class="collapse navbar-collapse" id="navbarCollapse">
           <ul class="nav navbar-nav navbar-left">
                <li><img src="/assets/logo.png" id="pandalogo" </li>
                <li><%= link_to "Pandagram", '/', id: "logo" %></li>
            </ul>
            
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Home",   '/' %></li>
                <li><%= link_to "Help",   '/help' %></li>
                <% if user_signed_in? %>
                <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
                <% else %>
                <li><%= link_to "Log in", '/users/sign_in' %></li>
                <% end %>
            </ul>
           
        </div>
</header>
</html>